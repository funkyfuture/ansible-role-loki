#jinja2: trim_blocks: True, lstrip_blocks: True
---

auth_enabled: {{ loki_auth_enabled | ansible.builtin.to_yaml }}

server:
  http_listen_port: {{ loki_server_http_listen_port }}
  http_listen_address: {{ loki_server_http_listen_address }}
  log_level: {{ loki_log_level }}

ingester:
  {{ loki_ingester | to_nice_yaml(indent=2) | indent(2, False) }}

schema_config:
  configs:
  {{ loki_schema_configs | to_nice_yaml(indent=2) | indent(2, False) }}

storage_config:
  {{ loki_storage_config | to_nice_yaml(indent=2) | indent(2, False) }}

table_manager:
  retention_deletes_enabled: true
  retention_period: {{ loki_data_retention_period }}

...
